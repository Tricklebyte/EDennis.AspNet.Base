{
  "Administration": {
    "PolicyType": "Role",
    "PolicyName": "AdministerIDP",
    "RoleName": "AdministerIDP"
  },
  "DbContexts": {
    "AspNetIdentityDbContext": {
      "ConnectionString": "Server=(LocalDb)\\MSSQLLocalDB;Database=AspNetIdentityServer;Trusted_Connection=True;MultipleActiveResultSets=True;"
    },
    "ConfigurationDbContext": {
      "ConnectionString": "Server=(LocalDb)\\MSSQLLocalDB;Database=AspNetIdentityServer;Trusted_Connection=True;MultipleActiveResultSets=True;"
    },
    "PersistedGrantDbContext": {
      "ConnectionString": "Server=(LocalDb)\\MSSQLLocalDB;Database=AspNetIdentityServer;Trusted_Connection=True;MultipleActiveResultSets=True;"
    }
  },
  "Logging": {
    "OidcLogging": {
      "Enabled": true
    },
    "Serilog": {
      "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
      "MinimumLevel": {
        "Default": "Information",
        "Override": {
          "Microsoft": "Warning",
          "System": "Warning",
          "Microsoft.AspNetCore.Authentication": "Information"
        }
      },
      "WriteTo": [
        { "Name": "Console" },
        {
          "Name": "File",
          "Args": { "path": "Logs/log.txt" }
        }
      ],
      "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
      "Destructure": [
        {
          "Name": "ToMaximumDepth",
          "Args": { "maximumDestructuringDepth": 4 }
        },
        {
          "Name": "ToMaximumStringLength",
          "Args": { "maximumStringLength": 100 }
        },
        {
          "Name": "ToMaximumCollectionCount",
          "Args": { "maximumCollectionCount": 10 }
        }
      ],
      "Properties": {
        "Application": "EDennis.AspNetIdentityServer"
      }
    }
  }
}
