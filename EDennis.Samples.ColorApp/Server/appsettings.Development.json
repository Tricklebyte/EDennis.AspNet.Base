{
  "AllowedHosts": "*",
  "Apis": {
    "Rgb": "https://localhost:44341/Rgb"
  },
  "Security": {
    /*outgoing OIDC client*/
    "OpenIdConnect": {
      "Authority": "https://localhost:5000",
      "ClientId": "EDennis.Samples.ColorApp.Server",
      "ClientSecret": "secret",
      "Scopes": [ "EDennis.Samples.ColorApi.*" ]
    }
  },
  "Logging": {
    /*for request and response logging (including bodies)*/
    "HttpLogging": {
      "ConfigFile": "httpLogging.json"
    },
    /*for Serilog configuration*/
    "Serilog": {
      "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
      "MinimumLevel": "Information",
      "WriteTo": [
        { "Name": "Console" },
        {
          "Name": "File",
          "Args": { "path": "Logs/log.txt" }
        }
      ]
    }
  }
}
