{
  "AllowedHosts": "*", /*for CORS?*/
  /*for external endpoints; used by ProxyControllers*/
  "ProxyClients": {
    "RgbClient": "https://localhost:44336"
  },
  "ConnectionStrings": {
    /*for AspNetIdentity database*/
    "DomainIdentityDbContext": "Server=(localdb)\\mssqllocaldb;Database=AspNetIdentityServer;Trusted_Connection=True;MultipleActiveResultSets=true"
  },
  "Security": {
    /*for auto-generated policies and corresponding Authorize attributes*/
    "DefaultPolicies": {
      "ClaimTypes": [ "scope" ] /*policies evaluated against what claim type(s)*/
    },
    /*use instead of role claims defined in AspNet Identity db*/
    "ChildClaims": {
      "ParentType": "role:EDennis.Samples.ColorApp.Server",
      "ChildType": "scope",
      "Data": [
        [ "admin", "*" ],
        [ "user", "-*.Delete*" ],
        [ "readonly", "*.Get*" ]
      ]
    },
    /*outgoing OAuth client, used by Proxy Clients above*/
    "ClientCredentials": {
      "Authority": "https://localhost:5000",
      "ClientId": "EDennis.Samples.ColorApp.Server:API",
      "ClientSecret": "secret",
      "Scopes": [ "EDennis.Samples.ColorApi.*" ]
    },
    /*integrated identity server*/
    "IdentityServer": {
      "Key": {
        "Type": "Development"
      },
      /*incoming OIDC client(s)*/
      "Clients": {
        "EDennis.Samples.ColorApp.Client": {
          "Profile": "IdentityServerSPA"
        }
      }
    }
  },
  "Testing": {
    /*for auto-rollback of database upon app shutdown*/
    "CachedTransaction": {
      /*to allow rollback in production environments for certain claims*/
      "EnabledForClaims": {
        "email": [ "maria@a.test" ]
      }
    },
    /*to optionally bypass authentication*/
    "MockClaimsPrincipal": {
      /*
         "Selected" identifies which mock claims principal to use from the pool.
          -- A null value disables the mock claims principal middleware
          -- Set this value with "mcp=xxx" command-line argument
      */
      "Selected": "Maria",
      "Pool": {
        "Maria": {
          "email": [ "maria@a.test" ],
          "scope": [ "EDennis.Samples.ColorApi.*" ]
        },
        "Darius": {
          "email": [ "darius@b.test" ],
          "scope": [ "EDennis.Samples.ColorApi.*.Get*" ]
        }
      }
    }
  },
  "Logging": {
    /*for request and response logging (including bodies)*/
    "HttpLogging": {
      "ConfigFile": "httpLogging.json"
    },
    /*for Serilog configuration*/
    "Serilog": {
      "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
      "WriteTo": [
        { "Name": "Console" },
        {
          "Name": "File",
          "Args": { "path": "Logs/log.txt" }
        }
      ]
    }
  }
}
