@model EDennis.Samples.ColorApp.Razor.Pages.Rgb.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<div class="container">
    <h2>Small Table</h2>
    <p>The .table-sm class makes the table smaller by cutting cell padding in half:</p>
    <form class="form" action="#">
        <div class="form-group row filter-row">
            <select class="form-control col-sm-3" name="fld1" id="fld1">
                <option value="Id">Id</option>
                <option value="Name">Name</option>
                <option value="Red">Red</option>
                <option value="Green">Green</option>
                <option value="Blue">Blue</option>
            </select>
            <select class="form-control col-sm-3" name="op1" id="op1">
                <option value="0" title="equals">Equals</option>
                <option value="1" title="does not equal">Not Equals</option>
                <option value="2" title="in comma-delimited list">In  a,b,c ...</option> <!-- .Where("Name in (\"Brown\",\"Grey\"))") -->
                <option value="3" title="not in comma-delimited list">Not In  a,b,c ...</option> <!-- .Where("not(Name in (\"Brown\",\"Grey\"))") -->
                <option value="4" title="less than">Less Than</option>
                <option value="5" title="greater than or equal to">Greater or =</option>
                <option value="6" title="starts with">Starts With</option>
                <option value="7" title="contains">Contains</option>
            </select>
            <input type="text" class="form-control col-sm-6" name="val1" id="val1"> <!-- style="width:500px!important"> -->
        </div>
        <div class="form-group row filter-row">
            <select class="form-control col-sm-3" name="fld1" id="fld1">
                <option value="Id">Id</option>
                <option value="Name">Name</option>
                <option value="Red">Red</option>
                <option value="Green">Green</option>
                <option value="Blue">Blue</option>
            </select>
            <select class="form-control col-sm-3" name="op1" id="op1">
                <option value="0" title="equals">Equals</option>
                <option value="1" title="does not equal">Not Equals</option>
                <option value="2" title="in comma-delimited list">In  a,b,c ...</option> <!-- .Where("Name in (\"Brown\",\"Grey\"))") -->
                <option value="3" title="not in comma-delimited list">Not In  a,b,c ...</option> <!-- .Where("not(Name in (\"Brown\",\"Grey\"))") -->
                <option value="4" title="less than">Less Than</option>
                <option value="5" title="greater than or equal to">Greater or =</option>
                <option value="6" title="starts with">Starts With</option>
                <option value="7" title="contains">Contains</option>
            </select>
            <input type="text" class="form-control col-sm-6" name="val1" id="val1"> <!-- style="width:500px!important"> -->
        </div>
    </form>


    <!--TODO: Get this working -->
    <!--
    <component type="typeof(BlazorSearchButton)" render-mode="ServerPrerendered"
               param-Url="./Index" param-Model="@Model" />
    -->

    <a asp-page="./Index"
       asp-route-fld1="@Model.SearchTable[0].FieldName"
       asp-route-op1="@Model.SearchTable[0].Operator"
       asp-route-val1="@Model.SearchTable[0].FieldValue"
       asp-route-fld2="@Model.SearchTable[1].FieldName"
       asp-route-op2="@Model.SearchTable[1].Operator"
       asp-route-val2="@Model.SearchTable[1].FieldValue"
       asp-route-pageNumber="1"
       class="btn btn-light btn-sm btn-block">
        Previous
    </a>
    <table class="table table-sm">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Red</th>
                <th>Green</th>
                <th>Blue</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Data) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Red)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Green)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Blue)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SysStart)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SysEnd)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SysUser)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SysStatus)
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>



